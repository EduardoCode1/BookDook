@model UsuarioModel

@{
    ViewData["Title"] = "Registro de libros";
}

<style>
    h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .text-center {
        text-align: center;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        color: #fff;
        background-color: #007bff;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }
</style>

<h1>Registro de libros</h1>
<form method="post" class="form-floating">
    <!--Fecha de publicacion-->
    <div class="form-group">
        <label asp-for="Fecha_de_publicación"></label>
        <input class="form-control" asp-for="Fecha_de_publicación" type="date" />
    </div>

    <!--Fecha de creacion-->
    <div class="form-group">
        <label asp-for="Fecha_de_creación"></label>
        <input class="form-control" asp-for="Fecha_de_creación" type="date" />
    </div>

    <!--Titulo del libro-->
    <div class="form-group">
        <label asp-for="Título_del_libro"></label>
        <input class="form-control" asp-for="Título_del_libro" />
    </div>

    <!--Autor-->
    <div class="form-group">
        <label asp-for="Autor"></label>
        <input class="form-control" asp-for="Autor" />
    </div>

    <!--Categoría-->
    <div class="form-group">
        <label asp-for="Categoría"></label>
        <input class="form-control" asp-for="Categoría" />
    </div>

    <!--Número de páginas-->
    <div class="form-group">
        <label asp-for="NumPaginas"></label>
        <input class="form-control" asp-for="NumPaginas" type="number" />
    </div>

    <!--País-->
    <div class="form-group">
        <label asp-for="País"></label>
        <input class="form-control" asp-for="País" />
    </div>

    <!--Idioma original-->
    <div class="form-group">
        <label asp-for="Idioma_original"></label>
        <input class="form-control" asp-for="Idioma_original" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Registrar Libro</button>
    </div>
</form>
